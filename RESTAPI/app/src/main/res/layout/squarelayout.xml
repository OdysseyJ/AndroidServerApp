<?xml version="1.0" encoding="utf-8"?>
<com.example.restapi.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageview_recyclerview_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_above="@+id/textview_recyclerview_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textview_recyclerview_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageview_recyclerview_image"
        android:layout_alignLeft="@+id/imageview_recyclerview_image"
        android:layout_alignEnd="@+id/imageview_recyclerview_image"
        android:layout_alignRight="@+id/imageview_recyclerview_image"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Text"
        android:textSize="30sp" />

</com.example.restapi.SquareLayout>